<h1>Kitchen Sink Demo Page</h1>
<%= form_for @kitchen_sink, builder: EtGdsDesignSystem.form_builder_class do |f| %>

  <h2>Error Summary</h2>
  <div>
    <%= f.govuk_error_summary 'Test error summary' %>
  </div>


  <h2>Text Field</h2>
  <div>
    <% if show_hint? %>
      <%= f.govuk_text_field :text_field_value, label: {text: 'Text field label'}, hint_text: 'Text field hint' %>
    <% else %>
      <%= f.govuk_text_field :text_field_value, label: {text: 'Text field label'} %>

    <% end %>
  </div>

  <h2>Text Area</h2>
  <div>
    <% if show_hint? %>
      <%= f.govuk_text_area :text_area_value, label: { text: 'Text area label'}, hint_text: 'Text area hint' %>
    <% else %>
      <%= f.govuk_text_area :text_area_value, label: { text: 'Text area label'} %>
    <% end %>
  </div>


  <h2>Date field</h2>

  <div>
    <% if show_hint? %>
      <%= f.govuk_date_field :date_field_value, label: { text: 'Date field label'}, hint_text: 'Date field hint' %>
    <% else %>
      <%= f.govuk_date_field :date_field_value, label: { text: 'Date field label'} %>
    <% end %>
  </div>

  <h2>Radios Button</h2>

  <div>
    <% if show_hint? %>
      <%= f.govuk_collection_radio_buttons :collection_radio_buttons_value, [['post', 'Post'], ['email', 'Email']], :first, :last, label: { text: 'Collection radio buttons label'}, hint_text: 'Collection radio buttons hint' %>
    <% else %>
      <%= f.govuk_collection_radio_buttons :collection_radio_buttons_value, [['post', 'Post'], ['email', 'Email']], :first, :last, label: { text: 'Collection radio buttons label'} %>
    <% end %>
  </div>


  <h2>Phone Field</h2>
  <div>
    <% if show_hint? %>
      <%= f.govuk_phone_field :phone_field_value, label: {text: 'Phone field label'}, hint_text: 'Phone field hint' %>
    <% else %>
      <%= f.govuk_phone_field :phone_field_value, label: {text: 'Phone field label'} %>
    <% end %>
  </div>

  <h2>Email Field</h2>
  <div>
    <% if show_hint? %>
      <%= f.govuk_email_field :email_field_value, label: {text: 'Email field label'}, hint_text: 'Email field hint' %>
    <% else %>
      <%= f.govuk_email_field :email_field_value, label: {text: 'Email field label'} %>
    <% end %>
  </div>

  <h2>Check Boxes</h2>

  <div>
    <% if show_hint? %>
      <%= f.govuk_collection_check_boxes :collection_check_boxes_value, [['post', 'Post'], ['email', 'Email']], :first, :last, label: { text: 'Collection check boxes label'}, hint_text: 'Collection check boxes hint' %>
    <% else %>
      <%= f.govuk_collection_check_boxes :collection_check_boxes_value, [['post', 'Post'], ['email', 'Email']], :first, :last, label: { text: 'Collection check boxes label'} %>
    <% end %>
  </div>

  <h2>Fieldset</h2>
  <div>
    <%= f.govuk_fieldset label: {text: 'Fieldset label'} do %>
      <p>Fieldset inner content</p>
    <% end %>
  </div>



<% end %>

